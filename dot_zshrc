function deepl
{
  args="$*"
  echo "$args"
  echo "$args" | command deepl -s --to en
}

alias deepl="noglob deepl"

function rm
{
  /bin/rm $@ -I
}

function ask
{
  args="$*"
  ai ask "$args"
}

